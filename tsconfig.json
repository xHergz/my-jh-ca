{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es6", "DOM"],
      "noImplicitThis": true,
      "strictNullChecks": true,
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules"
    ]
  }